<h1>Update the {{ task.getDescription }} task </h1>

<form action="/tasks/{{ task.getId }}" method="post">
  <input name="_method" type="hidden" value="patch">  <!--tells server to treat POST request as PATCH request-->

  <label for="name">Rename your task:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/tasks/{{ task.getId }}" method="post">
  <input name="_method" type="hidden" value="delete">  <!--tells server to treat POST request as DELETE request-->

  <button type="submit">Delete this task</button>
</form>
